{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES6",  
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",   //ts编译生成的js所在的文件
    "sourceMap": false,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["*"]
    }
  },
  "include": [
    "**/*.ts"    //在更目录下创建一个src目录，需要编译的ts文件
  ],
  "exclude": [            //这些文件夹下的文件不需要进行编译
    "node_modules",
    "dist"
  ]
}